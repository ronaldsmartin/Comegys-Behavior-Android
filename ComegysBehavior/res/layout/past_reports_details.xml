<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >
    
    <!-- Header -->
    <TextView android:id="@+id/brother_status_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dip"
        android:gravity="center" 
       
        android:fontFamily="sans-serif-condensed"
        android:textAllCaps="true"
        android:textStyle="bold"
       
        android:text="Past Report"
        style="@android:style/TextAppearance.Large"  />
    
    <!-- Content -->
	<ScrollView
	    android:id="@+id/report_scrollview"
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent">

	 	<LinearLayout 
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:paddingLeft="16dip"
	      	android:paddingRight="16dip"
	        android:orientation="vertical"
	        android:gravity="center"
	        android:fontFamily="sans-serif-light" >

		<!-- Name -->
		    <TextView
		        android:id="@+id/name"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:text="STUDENT NAME"
		        
		        style="?android:attr/listSeparatorTextViewStyle" />


		    <!-- Student Details -->
			<LinearLayout 
			    android:layout_width="fill_parent"
			    android:layout_height="wrap_content"
			    android:padding="10dip"
			    android:orientation="horizontal" >
				<TextView
	                android:layout_gravity="left"
	                android:layout_width="0dip"
	                android:layout_height="wrap_content"
	                android:layout_weight="1"
	                android:fontFamily="sans-serif-light"
	                style="@android:style/TextAppearance.Medium"
	                android:text="Grade: " />

				<TextView android:id="@+id/grade"
				    	android:text = "1st"
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:layout_gravity="right"
		                android:fontFamily="sans-serif-light"
		                android:textAllCaps="true"/>
			</LinearLayout>

			<LinearLayout 
			    android:layout_width="fill_parent"
			    android:layout_height="wrap_content"
			    android:padding="10dip"
			    android:orientation="horizontal" >
				<TextView
	                android:layout_gravity="left"
	                android:layout_width="0dip"
	                android:layout_height="wrap_content"
	                android:layout_weight="1"
	                android:fontFamily="sans-serif-light"
	                style="@android:style/TextAppearance.Medium"
	                android:text="Report Date: " />

				<TextView android:id="@+id/date"
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:layout_gravity="right"
		                android:fontFamily="sans-serif-light"
		                />
			</LinearLayout>

	    <!--Behavior Report -->
        <TextView 
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:text="Behavior Report" 
		    
	        style="?android:attr/listSeparatorTextViewStyle" />

	        <LinearLayout 
			    android:layout_width="fill_parent"
			    android:layout_height="wrap_content"
			    android:padding="10dip"
			    android:orientation="horizontal" >
				<TextView
	                android:layout_gravity="left"
	                android:layout_width="0dip"
	                android:layout_height="wrap_content"
	                android:layout_weight="1"
	                android:fontFamily="sans-serif-light"
	                style="@android:style/TextAppearance.Medium"
	                android:text="Location: " />

				<TextView android:id="@+id/behavior_location"
				    	android:text ="Classroom"
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:layout_gravity="right"
		                
		                android:fontFamily="sans-serif-light" />
			</LinearLayout>

	        <LinearLayout 
			    android:layout_width="fill_parent"
			    android:layout_height="wrap_content"
			    android:padding="10dip"
			    android:orientation="vertical" >
				
				<TextView
	                android:layout_gravity="left"
	               	android:layout_width = "wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_weight="1"
	                android:fontFamily="sans-serif-light"
	                style="@android:style/TextAppearance.Medium"
	                android:text="Details" />
			
				<TextView android:id="@+id/behavior_report_details"
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:layout_gravity="left"
		                android:text = "This is a Report Checkbox line what happens when i go over\nThere are multiple lines\nThis is one more thing"
		                android:fontFamily="sans-serif-light" />
			</LinearLayout>

	        
	    <!--Acedemic Report -->
	        <TextView 
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:text="Academic Report"
		      
		        style="?android:attr/listSeparatorTextViewStyle" />

	        <LinearLayout 
			    android:layout_width="fill_parent"
			    android:layout_height="wrap_content"
			    android:padding="10dip"
			    android:orientation="horizontal" >
				<TextView
	                android:layout_gravity="left"
	                android:layout_width="0dip"
	                android:layout_height="wrap_content"
	                android:layout_weight="1"
	                android:fontFamily="sans-serif-light"
	                style="@android:style/TextAppearance.Medium"
	                android:text="Location: " />

				<TextView android:id="@+id/academic_location"
				    	android:text = "Classroom"
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:layout_gravity="right"
		                android:fontFamily="sans-serif-light"
		                 />
			</LinearLayout>

	        <LinearLayout 
			    android:layout_width="fill_parent"
			    android:layout_height="wrap_content"
			    android:padding="10dip"
			    android:orientation="vertical" >
				<TextView
	                android:layout_gravity="left"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_weight="1"
	                android:fontFamily="sans-serif-light"
	                style="@android:style/TextAppearance.Medium"
	                android:text="Details: " />

				<TextView android:id="@+id/acedemic_details"
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:layout_gravity="left"
		                android:text = "This is a Report Checkbox line what happens when i go over\nThere are multiple lines\nThis is one more thing"
		                
		                android:fontFamily="sans-serif-light" />
			</LinearLayout>


	    <!-- Strategies -->
        <TextView 
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:text="Strategies"
		 
	        style="?android:attr/listSeparatorTextViewStyle" />

        	<LinearLayout 
			    android:layout_width="fill_parent"
			    android:layout_height="wrap_content"
			    android:padding="10dip"
			    android:orientation="vertical" >
				<TextView
	                android:layout_gravity="left"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_weight="1"
	                android:fontFamily="sans-serif-light"
	                style="@android:style/TextAppearance.Medium"
	                android:text="Details: " />

				<TextView android:id="@+id/fellowship_status"
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:layout_gravity="left"
		             	android:text = "This is a Report Checkbox line what happens when i go over\nThere are multiple lines\nThis is one more thing"
		                
		                android:fontFamily="sans-serif-light" />
			</LinearLayout>
			
        <LinearLayout 
			    android:layout_width="fill_parent"
			    android:layout_height="wrap_content"
			    android:padding="10dip"
			    android:orientation="horizontal" >
				<Button
	                android:layout_gravity="left"
	                android:layout_width="0dip"
	                android:layout_height="wrap_content"
	                android:layout_weight="1"
	                android:fontFamily="sans-serif-light"
	                style="@android:style/TextAppearance.Medium"
	                android:text="Delete Report" />

				<Button android:id="@+id/email_button"
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:layout_gravity="right"
						android:text= "Send Email"	                
		                android:fontFamily="sans-serif-light" />
			</LinearLayout>

	    </LinearLayout>
	</ScrollView>
</LinearLayout>